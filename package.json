{
  "name": "joystream-discover-node",
  "version": "1.0.0",
  "description": "An apollo based GraphQL node to search harvested data from Joystream blockchain",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "rm -rf dist/* && tsc --rootDir ./",
    "watch": "tsc --watch --rootDir ./",
    "test": "yarn run build && jest",
    "lint": "tslint -c tslint.json -p .",
    "lint-fix": "tslint --fix -c tslint.json -p .",
    "start": "yarn run build && nodemon dist/src/index.js",
    "start:ci": "yarn run build && node dist/src/index.js"
  },
  "author": "Joystream",
  "license": "AGPL V3",
  "dependencies": {
    "@types/sequelize": "4.28.8",
    "apollo-datasource": "^0.1.3",
    "apollo-datasource-rest": "^0.1.5",
    "apollo-server": "2.6.1",
    "apollo-server-testing": "2.6.1",
    "graphql": "^14.2.1",
    "isemail": "^3.1.3",
    "mysql2": "2.0.1",
    "nodemon": "^1.18.4",
    "reflect-metadata": "0.1.13",
    "sequelize": "^4.39.0",
    "sqlite3": "^4.0.3",
    "typeorm": "0.2.20"
  },
  "devDependencies": {
    "@babel/core": "7.7.5",
    "@babel/preset-env": "7.7.6",
    "@typescript-eslint/parser": "2.10.0",
    "apollo-link": "^1.2.3",
    "apollo-link-http": "^1.5.5",
    "babel-jest": "24.9.0",
    "prettier": "1.x",                                                                                          
    "tslint": "5.x",                                                                                            
    "tslint-config-airbnb": "5.x",                                                                              
    "tslint-config-prettier": "1.x",                                                                            
    "tslint-plugin-prettier": "2.x", 
    "eslint": "6.7.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "jest": "24.9.0",
    "node-fetch": "^2.2.1",
    "sinon": "7.5.0",
    "typescript": "3.7.3",
    "typescript-eslint": "0.0.1-alpha.0",
    "typescript-eslint-parser": "22.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__utils"
    ]
  }
}
